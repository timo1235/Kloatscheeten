{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@cloatscheeten/shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "../shared/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
